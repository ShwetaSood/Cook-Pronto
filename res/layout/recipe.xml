<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/_1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/picture"
        android:background="#3D3C3A" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_recipename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/picture"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="Recipe Name"
                android:textColor="#6e7b8b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_recipename"
                android:layout_marginLeft="2dp"
                android:text="TextView"
                android:textColor="#8b7b8b"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvNama"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="Time To Cook"
                android:textColor="#6e7b8b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_time"
                android:layout_marginLeft="2dp"
                android:text="TextView"
                android:textColor="#8b7b8b"
                android:textStyle="italic" />
            
            <TextView
                android:id="@+id/text_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvNama"
                android:layout_marginLeft="2dp"
                android:text="Ingredients"
                android:textColor="#6e7b8b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_quantity"
                android:layout_marginLeft="2dp"
                android:text="TextView"
                android:textColor="#8b7b8b"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_prepare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvBahan"
                android:layout_marginLeft="2dp"
                android:text="Preparation"
                android:textColor="#6e7b8b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prepare"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_prepare"
                android:layout_marginLeft="2dp"
                android:text="TextView"
                android:textColor="#8b7b8b"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>